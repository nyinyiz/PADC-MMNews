<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/margin_medium"
    android:layout_marginBottom="@dimen/margin_medium"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="2dp"
    android:foreground="@drawable/bg_ripple_white"
    app:cardCornerRadius="4dp"
    android:clickable="true"
    android:focusable="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_news_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/sport3"
            android:scaleType="centerCrop"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#6e000000"/>
        <ImageView
            android:id="@+id/iv_news_publication_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/margin_medium"
            android:src="@drawable/img_publication_logo_placeholder"/>
        <TextView
            android:id="@+id/tv_news_publication_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_news_publication_logo"
            android:text="Eleven Media"
            android:textColor="@color/white"
            android:shadowColor="@color/accent"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:layout_marginTop="@dimen/margin_medium"/>
        <TextView
            android:id="@+id/tv_publiched_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posted At:Jan 01-06:30AM"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:layout_below="@id/tv_news_publication_title"
            android:layout_alignLeft="@id/tv_news_publication_title"/>
        <TextView
            android:id="@+id/tv_news_title"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/dummy_news_details"
            android:textColor="@color/white"
            android:textSize="@dimen/text_regular_2x"
            android:ellipsize="end"
            android:lines="2"
            android:shadowColor="@color/accent"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_medium"/>
        <ImageView
            android:id="@+id/iv_"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_favorite_border_white_24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
